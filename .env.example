# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# Database
DATABASE_URL=sqlite:///./vacancies.db
# USE_SQLITE=1 — временно использовать SQLite при деплое (когда PostgreSQL ещё не настроен)
# Optional: Database directory path (will be created if doesn't exist)
# DATABASE_PATH=/tmp/data

# Logging
LOG_LEVEL=INFO

# Admin Telegram IDs (comma-separated)
ADMIN_IDS=

# Monitoring settings
DEFAULT_MONITORING_INTERVAL_HOURS=3

# Parser rate limiting (to avoid IP bans)
# Delay between requests in seconds (recommended: 2-5 seconds)
PARSER_DELAY_BETWEEN_REQUESTS=2.0
# Delay between page requests in seconds (recommended: 3-5 seconds)
PARSER_DELAY_BETWEEN_PAGES=3.0
# Max concurrent requests (1 = sequential, recommended: 1-2)
PARSER_MAX_CONCURRENT_REQUESTS=1
